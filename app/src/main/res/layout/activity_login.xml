<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black2">

    <Button
        android:id="@+id/GoogleLoginButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="30dp"
        android:text="google로 로그인하기"
        android:textColor="@color/black0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/google_logo_resized"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:background="@drawable/login_custom"
        android:paddingLeft="15dp"
        />

    <Button
        android:id="@+id/NaverLoginButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="naver로 로그인하기"
        android:textColor="@color/black0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/naver_logo_resized"
        app:layout_constraintTop_toBottomOf="@+id/GoogleLoginButton"
        android:backgroundTint="@color/white"
        android:background="@drawable/login_custom"
        android:paddingLeft="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

