<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white1">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <FrameLayout
        android:id="@+id/GoogleLoginFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/Logo" >

        <com.google.android.gms.common.SignInButton
            android:id="@+id/GoogleLoginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/GoogleLoginFake"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:text="google로 로그인하기"
            android:textColor="@color/black0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/google_logo_resized"
            android:background="@drawable/login_custom"
            android:paddingLeft="15dp"
            />
    </FrameLayout>

    <Button
        android:id="@+id/NaverLoginFrame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="naver로 로그인하기"
        android:textColor="@color/black0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/naver_logo_resized"
        app:layout_constraintTop_toBottomOf="@+id/GoogleLoginFrame"
        android:background="@drawable/login_custom"
        android:paddingLeft="15dp"
        />

    <Button
        android:id="@+id/logoutBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ToTheMainButton"/>

    <Button
        android:id="@+id/ToTheMainButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:text="메인으로 가는 임시버튼"
        android:textColor="@color/black0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_custom_button"
        />

        <TextView
            android:id="@+id/hellotextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ToTheMainButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="wow"
            android:textColor="@color/black0"
            />


</androidx.constraintlayout.widget.ConstraintLayout>

