<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInitialInfoActivity"
    android:background="@drawable/custom_7718">

    <TextView
        android:id="@+id/myNameCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#009a0f0f"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:fontFamily="@font/noto_sans_cjkkr_regular"
        android:textStyle="normal"
        android:textSize="40sp"
        android:textColor="#191919"
        android:letterSpacing="-0.05"
        android:gravity="end"
        tools:text="내 명함"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="@color/beige0"
        android:text="다음으로"
        android:textColor="@color/black0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:background="@drawable/custom_24018"
        android:layout_marginTop="92.5dp"
        app:layout_constraintTop_toTopOf="@+id/getInfoRectangular">
    </View>

    <!--Code for layer -->
    <View
        android:id="@+id/getInfoRectangular"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_24019"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myNameCardText"/>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toTopOf="@+id/getInfoRectangular"
        android:text="이름"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="\'나다\'에서 사용할 이름을 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit"
        android:text="휴대전화"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:inputType="phone"
        android:hint="휴대전화 번호를 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneText"
        />

    <TextView
        android:id="@+id/blueToothText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/phoneEdit"
        android:text="블루투스"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/blueToothEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="블루투스 번호를 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueToothText"
        />

    <TextView
        android:id="@+id/birthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/blueToothEdit"
        android:text="생일"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/birthEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:inputType="datetime"
        android:hint="생일을 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthText"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
