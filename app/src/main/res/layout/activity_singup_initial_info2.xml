<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInitialInfoActivity"
    android:background="@drawable/custom_7718">

    <TextView
        android:id="@+id/myNameCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#009a0f0f"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:fontFamily="@font/noto_sans_cjkkr_regular"
        android:textStyle="normal"
        android:textSize="40sp"
        android:textColor="#191919"
        android:letterSpacing="-0.05"
        android:gravity="end"
        tools:text="내 명함"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ReturnBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/goback_icon"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="returnBtn" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="@color/beige0"
        android:text="저장하기"
        android:textColor="@color/black0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:background="@drawable/custom_24018"
        android:layout_marginTop="92.5dp"
        app:layout_constraintTop_toTopOf="@+id/getInfoRectangular">
    </View>

    <!--Code for layer -->
    <View
        android:id="@+id/getInfoRectangular"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_24019"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myNameCardText"/>

    <TextView
        android:id="@+id/positionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toTopOf="@+id/getInfoRectangular"
        android:text="직책"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/positionEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="직책을 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/positionText"
        />
    <TextView
        android:id="@+id/belongText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/positionEdit"
        android:text="소속"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/belongEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="소속을 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belongText"
        />

    <TextView
        android:id="@+id/callText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/belongEdit"
        android:text="전화번호"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/callEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="전화번호를 입력해주세요"
        android:textColorHint="@color/gray1"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callText"
        />

    <TextView
        android:id="@+id/faxText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/callEdit"
        android:text="팩스"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/faxEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="팩스 번호를 입력해주세요"
        android:textColorHint="@color/gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faxText"
        />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/getInfoRectangular"
        app:layout_constraintTop_toBottomOf="@+id/faxEdit"
        android:text="소속일자"
        android:textColor="@color/black0"
        />

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black0"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:hint="현재 직책의 시작 날짜를 입력해주세요"
        android:textColorHint="@color/gray1"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        />






</androidx.constraintlayout.widget.ConstraintLayout>