<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/NameCard1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard2"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard3"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard4"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard5"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>

            <TextView
                android:id="@+id/NameCard7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_custom_button"
                app:layout_constraintTop_toBottomOf="@id/NameCard6"
                tools:layout_editor_absoluteX="0dp"></TextView>

            <TextView
                android:id="@+id/NameCard8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard7"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>
            <TextView
                android:id="@+id/NameCard9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/NameCard8"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_custom_button"
                ></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>